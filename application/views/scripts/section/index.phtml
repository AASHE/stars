<div id="title">
    <?php echo $this->title ?>
    <div id="breadcrumbs">
        <a href="/">Home</a> / <a href="/tracker/">My Tracker</a> / <?php echo $this->title ?>
    </div>
</div>

<?php if ($this->message): ?>
  <div class="messages">
    <?php echo $this->message; ?>
  </div>
<?php endif; ?>

<table class="green">
	<tr>
    	<th>
        	Get Credit Form
        </th>
        <th>
        	Submit Credit Data
        </th>
        <th colspan="2">
        	Status
        </th>
        <th>
        	Updated
        </th>
    </tr>
    <?php $prevtitle = '' /* Prerequisite section name is '' */ ?>
    <?php foreach($this->credits as $credit) { ?>
        <?php if($prevtitle != $credit['subsectiontitle']) { ?>
            <tr>
                <th colspan="5">
                    <?php echo $prevtitle = $credit['subsectiontitle'] ?>
                </th>
            </tr>
        <?php } ?>
        <tr>
            <td>
              <?php if ($credit['formAvailable']): ?>
                <a href="<?php echo $credit['formLink'] ?>"
                   title="Click to download form">
                    <img src="/img/page_white_acrobat.png" 
                         alt="PDF File" 
                         border=0/>
                    <?php echo $credit['formFilename'] ?> </a>
              <?php else:
                  echo $credit['creditCode'];
                endif;
              ?>
            </td>
            <td>
              <a href= "<?php echo $credit['uploadLink'] ?>/"
                 title="<?php echo $credit['uploadTitle'] ?>" >
                <?php echo $credit['creditname'] ?></a>
            </td>
            <td align="center">
              <?php echo empty($credit['status']) ? ' - ' : '<img src="/img/tick.png" alt="tick" title="Credit Uploaded">' ?>
            </td>
            <td>
              <?php if (!empty($credit['status'])): ?>
                  <a href="<?php echo $credit['fileLink']; ?>" title="Click to Download your Submission"> <img src="/img/disk.png" alt="PDF File" border=0/>
                    <?php echo $credit['filename']; ?> </a>
              <?php endif ?>
            </td>
            <td>
                <?php echo empty($credit['status']) ? '': $credit['datemodified'] ?>
            </td>
        </tr>
    <?php } ?>
</table>
